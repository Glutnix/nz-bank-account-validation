# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[**.js]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.{inc.php,html,css,scss,coffee}]
indent_style = space
indent_size = 2

[**.md]
trim_trailing_whitespace = false
